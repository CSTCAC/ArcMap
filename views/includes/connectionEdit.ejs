<div class="modal-header">
    <h1 class="modal-title fs-5">Edit Connection: <%= model.CONN_ID %>
    </h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">

    <form action="/connectionEdit/<%= model.CONN_ID %>" method="post">

        <div class="form-group row mb-1">
            <label for="sourceApp" class="col-sm-2 col-form-label">Source Asset</label>
            <div class="col-sm-10">
                <select class="form-select" name="sourceApp" required>
                    <option value="<%= model.SOURCE_ASSET_ID %>" selected>
                        <%= model.SOURCE_ASSET_NAME %>
                    </option>
                    <% for (const a of assetModel) { %>
                        <option value="<%= a.ASSET_ID %>">
                            <%= a.ASSET_NAME %>
                        </option>
                        <% } %>
                </select>
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="destApp" class="col-sm-2 col-form-label">Destination Asset</label>
            <div class="col-sm-10">
                <select class="form-select" name="destApp" required>
                    <option value="<%= model.DEST_ASSET_ID %>" selected>
                        <%= model.DEST_ASSET_NAME %>
                    </option>
                    <% for (const a of assetModel) { %>
                        <option value="<%= a.ASSET_ID %>">
                            <%= a.ASSET_NAME %>
                        </option>
                        <% } %>
                </select>
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="proto" class="col-sm-2 col-form-label">Protocol</label>
            <div class="col-sm-10">
                <input type="proto" name="proto" id="proto" class="form-control" value="<%= model.PROTOCOL %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Encryption Used</label>
            <div class="col-sm-10">
                <input type="enc" name="enc" id="enc" class="form-control" value="<%= model.ENCRYPTION %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Server Authentication</label>
            <div class="col-sm-10">
                <input type="serverAuth" name="serverAuth" id="serverAuth" class="form-control"
                    value="<%= model.SERVER_AUTHENTICATION %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Client Authentication</label>
            <div class="col-sm-10">
                <input type="clientAuth" name="clientAuth" id="clientAuth" class="form-control"
                    value="<%= model.CLIENT_AUTHENTICATION %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Client Authorisation</label>
            <div class="col-sm-10">
                <input type="clientAuthz" name="clientAuthz" id="clientAuthz" class="form-control"
                    value="<%= model.CLIENT_AUTHORISATION %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Server CRL</label>
            <div class="col-sm-10">
                <input type="serverCRL" name="serverCRL" id="serverCRL" class="form-control"
                    value="<%= model.SERVER_CRL %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Client CRL</label>
            <div class="col-sm-10">
                <input type="clientCRL" name="clientCRL" id="clientCRL" class="form-control"
                    value="<%= model.CLIENT_CRL %>">
            </div>
        </div>

        <div class="form-group row mb-1">
            <label for="enc" class="col-sm-2 col-form-label">Connection Description</label>
            <div class="col-sm-10">
                <input type="desc" name="desc" id="desc" class="form-control" value="<%= model.DESCRIPTION %>">
            </div>
        </div>

        <div class="modal-footer mt-4">
            <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
</div>